<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="rounded8dp_TopRight80dp_BottomLift80dp" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">@dimen/magic_8dp</item>
        <item name="cornerSizeTopRight">80dp</item>
        <item name="cornerSizeBottomLeft">80dp</item>
    </style>

    <style name="ShapeableImageView_Size24dp" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeableImageView_TopRight16dp_BottomRight16dp" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

</resources>